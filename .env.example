# .env file - DO NOT COMMIT TO GIT

# --- Required ---
GROK3_AUTH_TOKEN=YOUR_GROK_API_TOKEN_HERE # 替换成你的认证 Token
GROK3_COOKIE='YOUR_GROK_COOKIE_STRING_OR_JSON_HERE' # 替换成你的 Cookie

# --- Optional Overrides ---
HOST_PORT=8180
CONTAINER_PORT=8180

# Uncomment and set if using a cookie file via volume mount
# COOKIE_FILE_PATH=/app/cookies.txt

# Other optional flags (uncomment to override defaults)
# TEXT_BEFORE_PROMPT="Custom text before prompt"
# TEXT_AFTER_PROMPT="Custom text after prompt"
# KEEP_CHAT=true
# IGNORE_THINKING=true
# CHARS_LIMIT=60000
# HTTP_PROXY=socks5://user:password@your_proxy_host:1080